<h1>My blog</h1>

<table class="table table-hover table-condensed" id="post_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody id= "addPost">
  <% @posts.each do |post| %>
  <tr id = <%= post.id %>>
  <td><%= post.title %></td>
  <td><%= post.author %></td>
  <td><%= post.published %></td>
  <td><%= post.content %></td>
  <td><%= link_to 'Show', post %></td>
  <td><%= link_to 'Edit', edit_post_path(post) %></td>
  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %></td>
  <% end %>
  </tr>
  </tbody>
</table>

<%# Added Bootstrap data modal attribute %>
<%= link_to 'New post', new_post_path, remote: true, class: "btn btn-success"%>




